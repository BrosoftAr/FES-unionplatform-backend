{
  "name": "union-platform-server",
  "version": 2,
  "env": {
    "MONGODB_URI": "@mongodb-union-platform",
    "AUTH_JWT_SECRET": "@auth-jwt-secret"
  },
  "routes": [
    {
      "src": "/api/incidents/(add|detail|edit|list)",
      "dest": "/api/incidents",
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Methods": "GET, POST, DELETE, OPTIONS",
        "Access-Control-Allow-Headers": "Authorization, Accept, Content-Type"
      },
      "methods": ["POST", "OPTIONS"]
    },
    {
      "src": "/api/users/(add|detail|edit|list)",
      "dest": "/api/users",
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Methods": "GET, POST, DELETE, OPTIONS",
        "Access-Control-Allow-Headers": "Authorization, Accept, Content-Type"
      },
      "methods": ["POST", "OPTIONS"]
    },
    {
      "src": "/api/news/(add|detail|edit|list|remove)",
      "dest": "/api/news",
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Methods": "GET, POST, DELETE, OPTIONS",
        "Access-Control-Allow-Headers": "Authorization, Accept, Content-Type"
      },
      "methods": ["POST", "OPTIONS"]
    }
  ]
}
